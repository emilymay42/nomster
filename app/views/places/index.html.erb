
<% @places.each do |place| %> 
	<div class = "booyah-box col-xs-10 col-xs-offset-1"> 
		<h1><%= link_to place.name, place_path(place) %> </h1>
		<i><%= place.address %> </i> <br /> <br />
		<p><%= place.description %> </p> <br /> 

		<% if place.user.present? %>
			<small><%= place.user.email %></small>
		<% end %>
		
		<div class = "clear"> </div>
		<br />

		<% if place.photos.last.present? && place.photos.last.picture.present? %>
          <p><%= image_tag place.photos.last.picture, :class => 'img-responsive' %></p>
    	<% end %>

		<% if place.comments.present? %>
			<div class = "col-xs-12"> 
				<blockquote>
					<% if place.last_comment.humanized_rating.present? %>
						<b> <%= place.last_comment.humanized_rating %> </b> -
					<% end %>
					<%= place.last_comment.message %>
					<small><%= place.last_comment.user.email %></small>
				</blockquote>
			</div>
		<% end %>


	</div>

<% end %>

<div class = "pagination-wrapper">
	<%= will_paginate @places %>
</div>